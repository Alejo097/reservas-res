{% extends "layout.html.twig" %}
{% block title %} Inicio {% endblock %}

{% block main %}
<div class="row">
    <div class="col-12">
        <section>
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src={{ asset("img/reserva.jpg")}} width="100%" height="800" class="img-fluid" alt="restaurante">
                    </div>
                    <div class="carousel-item">
                        <img src={{ asset("img/reserva0.jpg")}} width="100%" height="800" class="img-fluid" alt="restaurante">
                    </div>
                    <div class="carousel-item">
                        <img src={{ asset("img/restaurante0.jpg")}} width="100%" height="800" class="img-fluid" alt="restaurante">
                    </div>
                    <div class="carousel-item">
                        <img src={{ asset("img/plato.jpg")}} width="100%" height="800" class="img-fluid" alt="restaurante">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </section>
    </div>
  
    <div class="col-12">
        <div class="jumbotron jumbotron-fluid text-center" style="margin-top: 30px;">
            <div class="container">
                <p class="display-4">Reserva en cualquier restaurante, sin ningún tipo de coste. <i class="fab fa-creative-commons-nc"></i></p>
            </div>
        </div>
    </div>

    <div class="col-12">
        <figure class="figure border text-center" style="width:100%; height:auto;">
            <img src={{ asset("img/logo2.png")}} title="logo" class="img-fluid" width="auto" height="400px;" alt="Reservas-foto">
        </figure>
    </div>

    <div class="col-12">
        <div class="jumbotron jumbotron-fluid border">
            <div class="container">
                <div class="row text-center">
                    <div class="col-4">
                        <i class="fas fa-store fa-6x" style="color:#4917C4"></i>
                        <p style="font-size:40px;">Elige</p>
                    </div>
                    <div class="col-4">
                        <i class="fas fa-calendar-check fa-6x" style="color:#4917C4"></i>
                        <p style="font-size:40px;" >Reserva</p>
                    </div>
                    <div class="col-4">
                        <i class="fas fa-smile-beam fa-6x" style="color:#4917C4"></i>
                        <p style="font-size:40px;">Disfruta</p>
                    </div>
                </div>  
            </div>
          </div>
    </div>

    <div class="col-12">
        <section>
        <div class="media bg-light border">
            <img src={{ asset("img/dueño.jpg")}} class="img-thumbnail" width="300" height="250" alt="cocinero-en-restaurante">
            <div class="media-body text-center">
            <h4 class="mt-0">¿ Eres dueño de algún Restaurante ?</h4>
                <p class="lead">Registra tu restaurante sin ningún tipo de coste, en simples pasos.</p>
                {% if not app.user %}
                    <a href="{{ path('admin_nuevo')}}" class="btn btn-dark">Registra tu restaurante</a>
                {% endif %}
            </div>
        </div>
        </section>
    </div>
</div>
{% endblock %}