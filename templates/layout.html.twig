{% extends "base.html.twig" %}

{% block title %} layout {% endblock %}

{% block body %}

    {% block header %}
    <header>
        <nav class="navbar navbar-light bg-light fixed-top">
            {% if app.user %}
                <a class="nav-link" href="{{ path('inicio') }}" tabindex="-1"><img src={{ asset("img/logor.png")}} width="auto" height="50" alt="logo" class="rounded-circle"></a>
                <nav class="navbar navbar-light bg-light">
                    <form class="form-inline">
                    <input class="form-control mr-sm-2" type="search" placeholder="Restaurante" aria-label="Search">
                    <input class="form-control mr-sm-2" type="search" placeholder="Lugar" aria-label="Search">
                    <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Buscar</button>
                    </form>
                </nav>
            {% else %}
                <a class="nav-link" href="{{ path('inicio') }}" tabindex="-1"><img src={{ asset("img/logor.png")}} width="auto" height="50" alt="logo" class="rounded-circle"></a>
            {% endif %}
            
            <table>
                <tr>
                {% if not app.user %}
                    <td>
                        <a href="{{ path('login')}}" class="btn btn-outline-dark my-2 my-sm-0 btn-lg">Entrar <i class="fa fa-sign-in-alt fa-lg" aria-hidden="true"></i></a>
                    </td>
                    <td>
                        <a href="{{ path('usuario_nuevo')}}" class="btn btn-outline-dark my-2 my-sm-0 btn-lg">Crear cuenta <i class="fa fa-user-circle fa-lg" aria-hidden="true"></i></a>
                    </td>
                    </tr>
                {% else %}
                <tr>
                    <td class="btn-group">
                        <button type="button" class="btn btn-dark dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span><strong>{{ app.user.nombre }}</strong></span>

                            {% if app.user.imagen != null %}
                                <img src="{{ asset('perfilImg/'~app.user.imagen)}}" alt="..." class="rounded-circle" width="45" height="45" >
                            {% else %}
                                <i class="fas fa-user-circle fa-3x"></i>
                {% endif %}

                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a href="{{ path('usuario_perfil_edit', {'id':app.user.id}) }}"><button class="dropdown-item" type="button"><i class=""></i> Perfil</button></a>
                            <button class="dropdown-item" type="button"><i class="fas fa-star"></i> Favoritos</button>
                            <button class="dropdown-item" type="button"><i class="fas fa-comments"></i> Comentarios</button> 
                            <button class="dropdown-item" type="button"><i class="fas fa-utensils"></i> Reservas</button>
                            <button class="dropdown-item" type="button"><i class="fas fa-circle"></i> Puntos</button>
                            <div class="dropdown-divider"></div>
                            <a href="{{ path('logout') }}"><button class="dropdown-item" type="button"><i class="fas fa-sign-out-alt"></i> Salir</button></a>
                            
                        </div>
                    </td>
                </tr>    
                {% endif %}
            </table>
        </nav>
    </header>
    {% endblock %}
    

    {% block main %}{% endblock %}

    <section style="margin-top:85px;">
        <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src={{ asset("img/fondo.png")}} width="auto" height="400" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src={{ asset("img/fondo.png")}} width="auto" height="400" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src={{ asset("img/fondo.png")}} width="auto" height="400" class="d-block w-100" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>

    <div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="card" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>


        <section>
        <div class="media">
            <img src={{ asset("img/fondo.png")}} class="mr-3" alt="...">
            <div class="media-body">
