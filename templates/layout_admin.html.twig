                    <div class="text-center">
                        <img src="{{ asset('img/logoinicio.png')}}" alt="logo-inicio">
                        <hr />
                        <p class="text-center text-md-left">© 2020 Copyright:
                            <a href="">
                                <strong> ReservasRes.com</strong>
                            </a>
                        </p>   
                    </div>
                {% endblock %}
                </div>
            </div>
    </div>
{% endif %}
