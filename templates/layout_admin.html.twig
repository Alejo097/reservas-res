                        {% if app.user %}
                            <a class="nav-link active" href="{{ path('inicio-admin')}}"><i class="fas fa-home"></i> Inicio</a>
                            <a class="nav-link active" href="{{ path('admin-reservas',{'id':app.user.id})}}"><i class="fas fa-utensils"></i> Reservas</a>
