                <a href="{{ path('admin_edit', {'id':app.user.id}) }}"><button class="dropdown-item" type="button"><i class="fas fa-user"></i> Perfil</button></a>
                <a href="{{ path('restaurante_edit',{'id':app.user.id})}}"><button class="dropdown-item" type="button"><i class="fas fa-store"></i> Restaurante</button></a>
