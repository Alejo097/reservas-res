{% extends "promociones_admin.html.twig" %}

{% block title%} Promociones {% endblock %}
{% block main %}
{% if is_granted('ROLE_ADMIN') %}
    <div class="container-fluid">
    <p class="display-4">Ofertas <i class="fas fa-stream"></i></h1>
    <hr />
    <div class="row">
            {% if promociones %}
                {% for promocion in promociones %}
                <div class="col">
                <div class="card border mb-3 bg-light" style="width: 18rem;">
                    <div class="card-header"><span class="font-weight-bold" style="font-size: 17px;">#promocion {{ promocion.id }}</span></div>
                    <div class="card-body">
                        <p class="card-text">fecha <span class="font-weight-bold float-right" style="font-size: 15px;">{{ promocion.oferta.fechahora|date("F j, Y G:h") }}</span></p>
                        <p class="card-text font-weight-bold">#oferta <span class="font-weight-bold float-right" style="font-size: 15px;">{{ promocion.oferta.id }}</span></p>
                        <p class="card-text">descuento <span class="font-weight-bold float-right" style="font-size: 15px;">{{ promocion.oferta.descuento }} %</span></p>
                        <p class="card-text">descripción <span class="font-weight-bold float-right" style="font-size: 15px;">{{ promocion.oferta.descripcion }}</span></p>
                        
                        <a class="btn btn-danger" href="{{ path('eliminar-promocion', {'id':promocion.id} )}}" onclick="return confirm('¿ Eliminar promoción ?')">Eliminar promocion</a>
                    </div>
                </div>
                </div>
            {% endfor %}
            {% else %}
                <p class="lead" style="margin: auto; color:red">Aún no tienes ofertas.</p>
            {% endif %}
    </div>
    </div>
{% endif %}
{% endblock %}
